/* Responsive */
@media (max-width: 480px) {
    body {
        padding: 16px;
        padding-bottom: 70px;
    }

    .login-card {
        padding: 36px 28px;
        border-radius: 20px;
    }

    .login-header h1 {
        font-size: 26px;
    }

    .login-header p {
        font-size: 14px;
    }

    .form-group input {
        padding: 12px 14px;
        font-size: 14px;
    }

    .login-button {
        padding: 14px;
        font-size: 15px;
    }

    .footer {
        padding: 14px 16px;
    }

    .footer-text {
        font-size: 13px;
    }
}

@media (max-width: 360px) {
    .login-card {
        padding: 32px 24px;
    }

    .login-header h1 {
        font-size: 24px;
    }
}